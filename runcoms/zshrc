# set terminal.integrated.env.linux in Cursor's settings.json
if [[ "$TERM_PROGRAM" == "vscode" ]]; then
    if [[ "$CURSOR_IDE" == "1" ]]; then
        if command -v cursor >/dev/null 2>&1; then
            src_path="$(cursor --locate-shell-integration-path zsh 2>/dev/null)"
            [[ -f "$src_path" ]] && source "$src_path"
        fi
    else
        if command -v code >/dev/null 2>&1; then
            src_path="$(code --locate-shell-integration-path zsh 2>/dev/null)"
            [[ -f "$src_path" ]] && source "$src_path"
        fi
    fi
fi

if command -v eza >/dev/null 2>&1; then
  eza() {
    if git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
        if [[ -n "$(git status --porcelain 2>/dev/null)" ]]; then
            command eza --time-style long-iso --long --git --all "$@"
        return
      fi
    fi
    command eza --time-style long-iso "$@"
  }
fi

function mise-select() { [[ -z "$1" ]] && return 1 || mise use "$1@$(mise ls-remote "$1" | sort -rV | fzf)" }

function ghq-fzf() {
    local roots_re="$(
        ghq root --all \
            | sed 's/[.[\*^$()+?{}|]/\\&/g' \
            | paste -sd'|' -
    )"
    #local src="$(ghq root)/$(ghq list | fzf --preview "ls -laTp $(ghq root)/{} | tail -n+4 | awk '{print \$9\"/\"\$6\"/\"\$7 \" \" \$10}'")"
    #local src="$(ghq root)/$(ghq list | fzf --preview "eza --all --long --git --icons --time-style long-iso $(ghq root)/{} | awk '{print \$4\" \"\$5\"/\"\$6\" \"\$7 \" \" \$8}'")"
    local src=$(
        ghq list -p |
        awk -v re="^(${roots_re})/" '{d=$0; sub(re, "", d); print d "\t" $0}' |
        fzf --delimiter=$'\t' --with-nth=1 \
            --preview 'eza --all --long --git --icons --time-style long-iso -- {2}' |
        cut -f2
    ) || return
    if [ -n "$src" ]; then
      BUFFER=" cd $src"  # HIST_IGNORE_SPACE
      zle accept-line
    fi
    zle -R -c
}
zle -N ghq-fzf
bindkey '^g' ghq-fzf

if command -v gwq >/dev/null 2>&1; then
    source <(gwq completion zsh)
fi

