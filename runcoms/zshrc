if [[ "$OSTYPE" == "darwin"* ]];then
    [ -d /opt/homebrew/opt/curl/bin ] && export PATH="/opt/homebrew/opt/curl/bin:$PATH"
    [ -d /opt/homebrew/opt/gawk ] && export PATH="/opt/homebrew/opt/gawk/libexec/gnubin:$PATH"
